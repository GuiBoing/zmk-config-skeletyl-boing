#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        tri_layer {
            if-layers = <0 1 2 3>;
            then-layer = <4>;
        };
    };

    combos {
        compatible = "zmk,combos";

        esc {
            bindings = <&kp ESC>;
            key-positions = <0 1>;
        };

        caps {
            bindings = <&kp CAPS>;
            key-positions = <0 10 20>;
        };

        back {
            bindings = <&kp BACKSPACE>;
            key-positions = <8 9>;
        };

        del {
            bindings = <&kp DEL>;
            key-positions = <9 19>;
        };

        gamemode {
            bindings = <&to 4>;
            key-positions = <13 14 15 16>;
            layers = <0 1 2 4>;
        };

        qwerty {
            bindings = <&to 0>;
            key-positions = <3 4 5 6>;
            layers = <0 2 1 4>;
        };

        bluetooth {
            bindings = <&mo 3>;
            key-positions = <23 24 25 26>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        QWERTY {
            bindings = <
&kp Q             &kp W           &kp E           &kp R      &kp T        &kp Y      &kp U            &kp I                &kp O                 &kp P
&hm LEFT_SHIFT A  &kp S           &kp D           &kp F      &kp G        &kp H      &kp J            &kp K                &kp L                 &hm RIGHT_SHIFT RA(COMMA)
&hm LCTRL Z       &hm LEFT_GUI X  &hm LEFT_ALT C  &kp V      &kp B        &kp N      &kp M            &hm RIGHT_ALT COMMA  &hm RIGHT_GUI PERIOD  &hm RCTRL SEMICOLON
                                  &kp LEFT_SHIFT  &lt 1 TAB  &kp SPACE    &kp ENTER  &lt 2 BACKSPACE  &kp LEFT_CONTROL
            >;

            label = "QWERTY";
        };

        NUMB-SYMB {
            bindings = <
&kp SINGLE_QUOTE  &kp COMMA    &kp PERIOD  &kp GRAVE       &kp LEFT_BRACKET     &kp SLASH     &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp ASTERISK
&hm GRAVE EXCL    &kp AT_SIGN  &kp HASH    &kp TILDE       &kp RIGHT_BRACKET    &kp CARET     &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp MINUS
&kp EQUAL         &kp MINUS    &kp PLUS    &kp LEFT_BRACE  &kp SLASH            &kp NUMBER_0  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp PLUS
                               &trans      &trans          &trans               &trans        &trans        &trans
            >;

            label = "numbers and symbols";
        };

        FUNC-ACTION {
            bindings = <
&kp F1  &kp F2   &kp F3   &kp F4   &kp K_CUT      &kp C_PLAY_PAUSE  &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp C_MUTE           &kp PRINTSCREEN
&kp F5  &kp F6   &kp F7   &kp F8   &kp K_COPY     &kp PAGE_UP       &hm INSERT HOME    &kp UP_ARROW     &hm PRINTSCREEN END  &hm LG(LC(RIGHT)) LC(PAGE_UP)
&kp F9  &kp F10  &kp F11  &kp F12  &kp K_PASTE    &kp PAGE_DOWN     &kp LEFT_ARROW     &kp DOWN_ARROW   &kp RIGHT_ARROW      &hm LG(LC(LEFT_ARROW)) LC(PAGE_DOWN)
                 &trans   &trans   &trans         &trans            &trans             &trans
            >;

            label = "FN, actions and cursor";
        };

        CONECTION {
            bindings = <
&bt BT_CLR_ALL  &none         &none         &none   &none    &none   &none   &none   &out OUT_BLE  &out OUT_USB
&none           &none         &none         &none   &none    &none   &none   &none   &none         &none
&bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &none   &none    &none   &none   &none   &none         &none
                              &trans        &trans  &none    &trans  &trans  &trans
            >;
        };

        GAMEMODE {
            bindings = <
&hm TAB ESC     &kp Q  &kp W   &kp E   &kp R     &kp T   &kp Y   &trans  &trans  &kp P
&kp LEFT_SHIFT  &kp A  &kp S   &kp D   &kp F     &trans  &trans  &trans  &trans  &trans
&kp LCTRL       &kp Z  &kp X   &kp C   &kp V     &kp B   &trans  &trans  &trans  &trans
                       &trans  &trans  &trans    &trans  &trans  &trans
            >;

            label = "GAMEMODE";
        };
    };
};
